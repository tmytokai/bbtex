% 改行
\ifnum\c@BB@PA@i=#3\par\medskip\fi%
%
\ifnum\c@BB@PA@k=1%
\fbox{\BB@PA@tmpc~\BB@PA@tmpd}%
\else%
\BB@PA@tmpc~\BB@PA@tmpd%
