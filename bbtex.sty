\newcounter{RND@i}
\newcounter{RND@iy}
\newcounter{RND@z}
\newcounter{RND@m}
\newcounter{RND@a}
\newcounter{RND@q}
\newcounter{RND@r}
\newcounter{RND@rzpq}
\newcounter{RND@rnd}
%
\setcounter{RND@z}{1}%
